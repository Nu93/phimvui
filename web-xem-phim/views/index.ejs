        <script>
            // Chỉnh sửa: Thêm sự kiện click cho ảnh
            document.querySelectorAll('.film-thumbnail').forEach(thumbnail => {
            thumbnail.addEventListener('click', () => {
                const link = thumbnail.getAttribute('data-link');
                if (link) {
                // Chuyển hướng đến trang xem film khi bấm vào ảnh
                window.location.href = link;
                }
            });
            });
        </script>
    </body>
</html>