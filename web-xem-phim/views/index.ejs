<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Web Xem Phim</title>
        <link rel="stylesheet" href="../public/style.css">
        <title>Film List</title>
    </head>
    <body>
        <header class="header">
            <div class="logo">
                <img src="../img/logo.png" alt="Logo">
                <h1>PHIM VUI</h1>
            </div>
            <nav class="menu">
                <ul>
                    <li><a href="/">Trang Chủ</a></li>
                    <li><a href="/newfilm">Phim Mới</a></li>
                    <li><a href="/theloai">Thể Loại</a></li>
                    <li><a href="/login">đăng nhập</a></li>
                    <li><a href="/registration">đăng ký</a></li>
                    <!-- Thêm các mục menu khác tùy theo yêu cầu -->
                </ul>
            </nav>
        </header>
        <main class="main-content">
            
            <section class="movie-list">
                <% films.forEach(film => { %>
                <article class="movie">
                    <img class="film-thumbnail" src="<%= film.thumbnail %>" alt="<%= film.title %>" data-link="/watch/<%= film._id %>">
                    <h2><%= film.movieTitle %></h2>
                    <p><%= film.movieDescription %></p>
                    <p class="film-link"><strong>Link:</strong> <%= film.linkfilm %></p>
                </article>
                <% }); %>
            </section>
        </main>
