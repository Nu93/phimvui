<!-- Trong new-film.ejs -->
<html>
<head>
  <title>Thêm Film Mới</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin-bottom: 8px;
      margin-left: 8%;
    }

    input, textarea {
      width: 50%;
      padding: 8px;
      margin-bottom: 16px;
      box-sizing: border-box;
      margin-left: 10%;
    }

    button {
      background-color: #4caf50;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
  </style>
</head>
<body>
  <h1>Thêm Film Mới</h1>

  <form action="/add-film" method="POST" enctype="multipart/form-data">
    <!-- Thêm các trường form để nhập thông tin film mới -->
    <label for="Title">Tên Bộ Phim:</label>
    <input type="text" id="movieTitle" name="movieTitle" required>

    <label for="Description">Mô Tả:</label>
    <textarea type="text" id="movieDescription" name="movieDescription" rows="4" required></textarea>

    <label for="linkfilm">Link:</label>
    <input type="text" id="linkfilm" name="linkfilm" required>

    <label for="thumbnail">Thumbnail:</label>
    <input type="file" id="thumbnail" name="thumbnail" accept="image/*">

    <button type="submit">Thêm</button>
  </form>
</body>
</html>
